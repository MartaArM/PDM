<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEvento">

    <EditText
        android:id="@+id/et_descripcion"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/layout_border_text"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:inputType="textPersonName"
        android:paddingTop="0dp"
        android:textColorHint="#bfbfbf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="@android:color/white"
        android:backgroundTintMode="src_over"
        android:clickable="true"
        android:foregroundTint="@android:color/black"
        android:onClick="actualizarEvento"
        android:tint="@android:color/black"
        android:tintMode="src_atop"
        app:backgroundTint="@android:color/black"
        app:fabCustomSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:maxImageSize="70dp"
        app:srcCompat="?android:attr/textCheckMark" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="321dp"
        android:layout_height="177dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/layout_border"
        android:backgroundTintMode="src_atop"
        android:outlineProvider="background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettitulo2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:text="De:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginTop="44dp"
            android:text="A: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/ethorainicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="24dp"
            android:width="80dp"
            android:ems="10"
            android:inputType="time"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ethorafin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            android:width="80dp"
            android:ems="10"
            android:inputType="time"
            android:paddingStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/ethorainicio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/ettitulo2"
        android:layout_width="359dp"
        android:layout_height="55dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="44dp"
        android:background="#d9d9d9"
        android:backgroundTint="#d9d9d9"
        android:ems="10"
        android:hint="  Nombre del evento"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColorHint="#bfbfbf"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvedfecha" />

    <TextView
        android:id="@+id/tvedfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Fecha"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>